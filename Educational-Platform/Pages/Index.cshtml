@page
@model LoginModel
@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <form class="login-form" method="post">
        <div class="text-center">
            <img src="~/css/logotype.png" alt="Logotyp" class="logo" />
        </div>
        <input 
            type="email" 
            asp-for="Email" 
            placeholder="Email" 
            required 
        />
        <input 
            type="password" 
            asp-for="Password" 
            placeholder="Password" 
            required 
        />
        <button type="submit">Login</button>
    </form>
</div>